<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp">
    <ImageView
        android:id="@+id/item_conversation_list_contact_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/main_img"
        android:scaleType="fitXY" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_toRightOf="@id/item_conversation_list_contact_image"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_conversation_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/item_conversation_list_lastmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"/>
    </LinearLayout>
</RelativeLayout>